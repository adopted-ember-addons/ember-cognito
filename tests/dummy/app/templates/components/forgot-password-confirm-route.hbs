<div class="container">
  <div class="row">
    <div class="col-4">
      <h1>Reset Password</h1>
      <form class="reset-password-form" {{on "submit" this.forgotPasswordSubmit}}>
        {{#if this.errorMessage}}
          <div class="alert alert-danger">{{this.errorMessage}}</div>
        {{/if}}
        <div class="form-group">
          <label for="username">Username</label>
          <Input
            @value={{this.username}}
            class="form-control"
            id="username"
            placeholder="Username"
            autofocus
            required
          />
        </div>
        <div class="form-group">
          <label for="code">Code</label>
          <Input
            @value={{this.code}}
            class="form-control"
            id="code"
            placeholder="123456"
            required
          />
        </div>
        <div class="form-group">
          <label for="password">New Password</label>
          <Input
            @value={{this.password}}
            @type="password"
            class="form-control"
            id="password"
            placeholder="Password"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Reset Password</button>
      </form>
    </div>
  </div>
</div>
