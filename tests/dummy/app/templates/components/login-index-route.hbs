<div class='container'>
  <div class='row'>
    <div class='col-4'>
      <h1>
        Login
      </h1>
      <form class='login-form' {{on 'submit' this.login}}>
        {{#if this.errorMessage}}
          <div class='alert alert-danger'>
            {{this.errorMessage}}
          </div>
        {{/if}}
        <div class='form-group'>
          <label for='username'>
            Username
          </label>
          <Input
            @value={{this.username}}
            class='form-control'
            id='username'
            placeholder='Username'
            autofocus
            required
          />
        </div>
        <div class='form-group'>
          <label for='password'>
            Password
          </label>
          <Input
            @value={{this.password}}
            @type='password'
            class='form-control'
            id='password'
            placeholder='Password'
            required
          />
        </div>
        <button type='submit' class='btn btn-primary'>
          Login
        </button>
        <LinkTo @route='forgot-password.index' class='btn btn-link'>
          Forgot password
        </LinkTo>
      </form>
    </div>
  </div>
</div>