<div class="container">

  <div class="row">
    <div class="col-4">
      <h1>Register</h1>
      <form class="register-form" {{on "submit" (fn this.register)}}>
        {{#if this.errorMessage}}
          <div class="alert alert-danger">{{this.errorMessage}}</div>
        {{/if}}
        <div class="form-group">
          <label for="username">Username</label>
          <Input
            @value={{this.username}}
            class="form-control"
            @id="username"
            placeholder="Username"
            autofocus
            required
          />
        </div>
        <div class="form-group">
          <label for="email_address">Email address</label>
          <Input
            @value={{this.email}}
            @type="email"
            class="form-control"
            @id="email_address"
            placeholder="email@example.com"
          />
        </div>
        <div class="form-group">
          <label for="phone">Phone number</label>
          <Input
            @value={{this.phone}}
            @type="tel"
            class="form-control"
            @id="phone"
            placeholder="+18885551212"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <Input
            @value={{this.password}}
            @type="password"
            class="form-control"
            @id="password"
            placeholder="Password"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </div>
  </div>
</div>